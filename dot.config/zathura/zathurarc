set recolor-darkcolor "#93A1A1"
set recolor-lightcolor "#002B36"
set recolor true

# colors
set default-fg "#dcdccc"
set default-bg "#3f3f3f"
#set statusbar-fg "93a1a1"
#set statusbar-bg "#002b36"
set font "monospace normal 14"

# settings
set adjust-open width
set zoom-step 20
set first-page-column 1:1
set selection-clipboard clipboard

set scroll-full-overlap .1
set window-icon "~/.local/share/icons/pdf.png"
set page-padding 0
set page-thumbnail-size 0

# key bindings
map W adjust_window width
map H adjust_window best-fit
map <BackSpace> scroll full-up
map u scroll half-up
map = zoom in
map - zoom out

map [fullscreen] H adjust_window best-fit
map [fullscreen] W adjust_window width
map [fullscreen] f follow
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] k scroll up
